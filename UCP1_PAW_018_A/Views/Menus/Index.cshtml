@model IEnumerable<UCP1_PAW_018_A.Models.Menu>

@{
    ViewData["Title"] = "Index";
}

<h1>Menu</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("HargaMenu")
            </th>
            <th>
                @Html.DisplayName("JumlahMenu")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HargaMenu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JumlahMenu)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMenu"><i class="fa fa-marker fa-lg"> </i></a> |
                <a asp-action="Details" asp-route-id="@item.IdMenu"><i class="fas fa-list"> </i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdMenu"><i class="fa fa-trash fa-lg"> </i></a>
            </td>
        </tr>
}
    </tbody>
</table>
